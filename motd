#!/bin/bash
motdFile="$HOME/.config/george-motd/motd"
if [ ! -f $motdFile ]; then
gen-motd
fi
# motdFileContents="$(cat $motdFile)"
# mapfile -t motds <<< "${motdFileContents}"
mapfile -t motds < $motdFile
motd="${motds[$((RANDOM % ${#motds[@]}))]}"
colors=(
	"\e[0;31m"
	"\e[0;32m"
	"\e[0;33m"
	"\e[0;34m"
	"\e[0;35m"
	"\e[0;36m"
)
color=${colors[$((RANDOM % ${#colors[@]}))]}
printf "$color"
printf "$motd"
printf "\n\e[0m"
